@model IEnumerable<QLY_HOCSINH.Models.DiemDanh>

@{
    ViewData["Title"] = "Điểm danh";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<p>
    <a class = "btn btn-primary" asp-action="Create">Thêm mới</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Ngay)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TrangThai)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Hs)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Lop)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Ngay)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TrangThai)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Hs.HsId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Lop.LopId)
            </td>
                <td>
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.DiemDanhId">Chỉnh sửa</a> |
                    <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.DiemDanhId">Chi tiết</a> |
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.DiemDanhId">Xóa</a>
                </td>
        </tr>
}
    </tbody>
</table>
