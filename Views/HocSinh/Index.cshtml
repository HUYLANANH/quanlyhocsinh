@model IEnumerable<QLY_HOCSINH.Models.HocSinh>

@{
    ViewData["Title"] = "Thêm học sinh";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Thêm</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.HoTen)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.HoTen)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.HsId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.HsId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.HsId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
